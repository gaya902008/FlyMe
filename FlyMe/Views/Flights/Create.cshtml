@model FlyMe.Models.Flight

@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>Flight</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Source Airport Id</label>
                <input type="number" class="form-control" name="SourceAirportId" />
            </div>
            <div class="form-group">
                <label class="control-label">Destionation Airport Id</label>
                <input type="number" class="form-control" name="DestAirportId" />
            </div>
            <div class="form-group">
                <label class="control-label">Airplane Id</label>
                <input type="number" class="form-control" name="AirplaneId" />
            </div>
            <div class="form-group">
                <label class="control-label">Date</label>
                <input type="date" class="form-control" name="time" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>
