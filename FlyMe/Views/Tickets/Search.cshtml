@model IEnumerable<FlyMe.Models.Ticket>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <form asp-controller="Tickets" asp-action="Search">
        <p>
            Price: <input type="text" name="Price">
            Luggage Weight: <input type="text" name="FirstName">
            Id: <input type="text" name="Id">
            <input type="submit" value="Search">
        </p>
    </form>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LuggageWeight)
                </th>
                <th>
                    Buyer Name
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Flight)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LuggageWeight)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Buyer.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Flight.SourceAirport.Acronyms)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Flight.Date)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
