@model FlyMe.Models.Ticket

@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LuggageWeight" class="control-label"></label>
                <input asp-for="LuggageWeight" class="form-control" name="LuggageWeight" />
                <span asp-validation-for="LuggageWeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Flight Id</label>
                @Html.DropDownList("FlightID", null, htmlAttributes: new { @class = "form-control" })

                @if (ViewBag.ErrorMessage != null)
                {
                    <label class="text-danger">@ViewBag.ErrorMessage</label>
                }

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>
